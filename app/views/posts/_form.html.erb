
  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
  
        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-xs-12 col-md-2">
        <div class="field">
          <%= f.label :day, "날짜" %><br>
          <%= f.text_field :day,  :class => 'datepicker', :id => 'select_set_day' %>
        </div>
      </div>
      <div class="col-xs-12 col-md-10">
        <div class="field">
          <%= f.label :content, "일정" %><br>
          <%= f.text_area :content,class: 'form-control', autofocus: true, placeholder: '일정을 입력해주세요.' %>
        </div>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "등록하기" ,:class => 'btn btn-primary'%>
    </div>
  <% end %>
<script type="text/javascript">
  $(document).ready(function(){
    $('#select_set_day').datepicker({
       autoclose: true,
       todayHighlight: true,
       format: 'yyyy-mm-dd'
   });
  });
</script>
